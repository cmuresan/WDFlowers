<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/colorCard</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Text.Title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>
</resources>